from scraper import fetch_article
from summarizer import summarize_text
from user_profile import UserProfile

user = UserProfile(interests=['economics'])

# Example: Hardcoded article for now
article = fetch_article("https://www.dw.com/en/eu-pledges-500-million-for-science-amid-us-funding-cuts/a-72438165")
summary = summarize_text(article, user)

print(f"Source: {article['source']}")
print(summary)
